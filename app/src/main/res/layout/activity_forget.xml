<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_265"
            >


            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_36"
                android:text="重置密码"
                android:textColor="#6C6496"
                android:textSize="23sp" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_36"
                android:layout_below="@+id/text_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@drawable/shape_for_login_edit"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:singleLine="true"
                android:textColor="@color/black33"
                android:textColorHint="#cacaca"
                android:textSize="12sp"

                />


            <RelativeLayout
                android:id="@+id/relative_code"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_36"
                android:layout_below="@+id/edit_phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_9">

                <EditText
                    android:id="@+id/edit_code"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_36"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_for_login_edit"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:singleLine="true"
                    android:textColor="@color/black33"
                    android:textColorHint="#cacaca"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_code_zc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="1px"
                    android:layout_marginRight="1px"
                    android:layout_marginBottom="1px"
                    android:background="@drawable/shape_for_facesearch_code"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:text="获取验证"
                    android:textColor="#EF9161"
                    android:textSize="12sp" />
            </RelativeLayout>


            <EditText
                android:id="@+id/edit_passWord"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_36"
                android:layout_below="@+id/relative_code"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@drawable/shape_for_login_edit"
                android:digits="@string/filter_vcode"
                android:hint="新密码(6-20数字、字母组成)"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:singleLine="true"
                android:textColor="@color/black33"
                android:textColorHint="#cacaca"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/edit_CommitpassWord"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_36"
                android:layout_below="@+id/edit_passWord"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@drawable/shape_for_login_edit"
                android:digits="@string/filter_vcode"
                android:hint="确认新密码"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_6"
                android:singleLine="true"
                android:textColor="@color/black33"
                android:textColorHint="#cacaca"
                android:textSize="12sp" />


        </RelativeLayout>



</RelativeLayout>